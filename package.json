{
  "name": "mezzanine",
  "version": "0.0.0",
  "description": "mezzanine ui",
  "repository": "git@github.com:Mezzanine-UI/mezzanine.git",
  "author": "Mezzanine",
  "contributors": [
    "Jay Chen <gcobs135102@gmail.com>"
  ],
  "license": "MIT",
  "keywords": [
    "meaaznine",
    "ui",
    "react"
  ],
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "format": "prettier './**/*.{json,md,mdx}' --write",
    "lint:css": "stylelint ./**/*.scss",
    "lint:es": "eslint . --ext .js,.ts,.tsx,.mdx",
    "lint": "npm run lint:es && npm run lint:css",
    "test": "lerna run test --stream",
    "test:coverage": "lerna run test:coverage --stream",
    "commit": "git-cz",
    "core:test": "npm run test -- --scope=@mezzanine-ui/core",
    "core:test:coverage": "npm run test:coverage -- --scope=@mezzanine-ui/core",
    "react:test": "npm run test -- --scope=@mezzanine-ui/react",
    "react:test:coverage": "npm run test:coverage -- --scope=@mezzanine-ui/react",
    "react:storybook": "start-storybook -c ./packages/react/.storybook -p 6006"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-docs": "^6.1.11",
    "@storybook/addon-knobs": "^6.1.11",
    "@storybook/addon-storysource": "^6.1.11",
    "@storybook/cli": "^6.1.11",
    "@storybook/react": "^6.1.11",
    "@storybook/storybook-deployer": "^2.8.7",
    "@testing-library/dom": "^7.29.0",
    "@testing-library/react": "^11.2.2",
    "@types/jest": "^26.0.19",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "autoprefixer": "^10.1.0",
    "awesome-typescript-loader": "^5.2.1",
    "commitizen": "^4.2.2",
    "css-loader": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.8.2",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "postcss": "^8.2.1",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.1",
    "sass": "^1.30.0",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "ts-jest": "^26.4.4",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3"
  }
}
