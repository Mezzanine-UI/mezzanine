{
  "name": "@mezzanine-ui/react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react/src",
  "projectType": "library",
  "tags": ["type:lib", "framework:react"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/build.js",
        "cwd": "packages/react"
      },
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": [
        "@mezzanine-ui/system:build",
        "@mezzanine-ui/icons:build",
        "@mezzanine-ui/core:build"
      ]
    },
    "build:clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ../../scripts/cleanBuild.js",
        "cwd": "packages/react"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "packages/react"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --coverage",
        "cwd": "packages/react"
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "storybook dev -p 6006",
        "cwd": "{workspaceRoot}"
      }
    },
    "build-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "storybook build",
        "cwd": "{workspaceRoot}"
      },
      "outputs": ["{workspaceRoot}/storybook-static"]
    }
  }
}
