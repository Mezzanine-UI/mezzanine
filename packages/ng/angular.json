{
  "$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "yarn"
  },
  "newProjectRoot": "projects",
  "projects": {
    "ng": {
      "projectType": "library",
      "schematics": {
        "@schematics/angular:library": {
          "strict": true
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "mzn",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:dev-browser",
          "options": {
            "tsConfig": "tsconfig.dev.json",
            "styles": ["../../.storybook/global.scss"]
          }
        },
        "test": {
          "builder": "@angular-builders/jest:run"
        }
      }
    }
  },
  "defaultProject": "ng"
}
