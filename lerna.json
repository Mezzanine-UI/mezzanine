{
  "npmClient": "yarn",
  "npmClientArgs": [],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/__test-utils__",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/*.md",
        "**/*.mdx"
      ],
      "message": "chore: release",
      "yes": true
    },
    "publish": {
      "contents": "dist"
    }
  },
  "$schema": "node_modules/lerna/schemas/lerna-schema.json"
}
