{
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "v0.12.x",
      "conventionalCommits": true,
      "ignoreChanges": [
        "**/__test-utils__",
        "**/*.spec.*",
        "**/*.stories.*",
        "**/*.md",
        "**/*.mdx"
      ],
      "message": "chore: release",
      "yes": true
    },
    "publish": {
      "contents": "dist"
    }
  }
}
